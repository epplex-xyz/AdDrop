{
    "include": [
      "src",
      "pages",
      "client",
      "utils"
    ],
    "exclude": [
      "node_modules",
      "public"
    ],
    "compilerOptions": {
        "skipLibCheck": true,
        "typeRoots": [
          "./node_modules/@types",
          "./src/@types"
        ],
        "downlevelIteration": true,
        "target": "es6",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@public/*": ["public/*"],
            "@components/*": ["src/components/*"],
            "@styles/*": ["src/styles/*"]
        },
        "lib": ["dom", "dom.iterable", "esnext"],
        "incremental": true
    }
}
